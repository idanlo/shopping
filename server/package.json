{
    "name": "shopping-server",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "author": "Bowden Kelly",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "jest-migrate": "ts-jest config:migrate tsconfig.json"
    },
    "dependencies": {
        "bluebird": "^3.5.4",
        "body-parser": "^1.18.3",
        "compression": "^1.7.4",
        "connect-mongo": "^2.0.3",
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "express-session": "^1.16.1",
        "mongoose": "^5.5.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "^0.0.36",
        "@types/connect-mongo": "^0.0.41",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.16.1",
        "@types/express-session": "^1.15.2",
        "@types/jest": "^24.0.11",
        "@types/mongodb": "^3.1.23",
        "@types/mongoose": "^5.3.26",
        "@types/morgan": "^1.7.35",
        "@types/node": "^11.13.5",
        "@types/shelljs": "^0.8.5",
        "@types/supertest": "^2.0.7",
        "chai": "^4.2.0",
        "concurrently": "^4.1.0",
        "jest": "^24.7.1",
        "nodemon": "^1.18.11",
        "shelljs": "^0.8.3",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.4"
    }
}
